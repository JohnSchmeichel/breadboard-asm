{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "basm: assemble",
      "type": "shell",
      "group": "build",
      "command": "./basm ${file}",
      "problemMatcher": {
        "owner": "basm",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "source": "basm",
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(error|warning):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      }
    }
  ]
}
